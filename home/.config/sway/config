include /etc/sway/config.d/*

## Execs
# Gtk
exec_always {
    gsettings set $gtk-schema gtk-theme 'Gruvbox-Material-Dark'
    gsettings set $gtk-schema icon-theme 'Papirus-Dark'
    gsettings set $gtk-schema cursor-theme 'Bibata-Original-Ice'
    gsettings set $gtk-schema font-name 'CasckaydiaCove Nerd Font 10'
}

