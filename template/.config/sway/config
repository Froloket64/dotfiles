## Variables
# Modifier
set $mod Mod4

# Being eVIl
set $left h
set $down j
set $up k
set $right l

# Terminal
set $term {{ terminal }}
# Default shell
set $shell {{ shell }}

# Commands to run on shell startup
set $shell_cmds -C neofetch

# Application launcher
set $launcher dmenu_path | rofi -show drun | xargs swaymsg exec --

# Gtk
set $gtk-schema org.gnome.desktop.interface

set $gtk-theme    "{{ gtk.theme }}"
set $icon-theme   "{{ gtk.iconTheme }}"
set $cursor-theme "{{ gtk.cursorTheme }}"

## General
# Font
font "{{ font.name }}" {{ font.size }}

# Colors
# name                  border                    background              text                      indicator                 child_border 
client.focused          {{ colors.normal.white }} {{ colors.background }} {{ colors.foreground }}   {{ colors.bright.black }} {{ colors.bright.black }}
client.focused_inactive {{ colors.normal.white }} {{ colors.background }} {{ colors.foreground }}   {{ colors.bright.black }} {{ colors.bright.black }}
client.unfocused        {{ colors.background1 }}  {{ colors.background }} {{ colors.bright.black }} {{ colors.background1 }}  {{ colors.background1 }}
client.urgent           {{ colors.background1 }}  {{ colors.bright.red }} {{ colors.background1 }}  {{ colors.bright.red }}   {{ colors.bright.red }}

# Borders, gaps
default_border pixel 2
smart_borders on

gaps inner 6

# -- Swayfx --
smart_borders off

corner_radius 4
# -- END --

# Cursor theme
seat seat0 xcursor_theme $gtk-cursor 10

## Output configuration
# Displays
{%- for output in monitors %}
output {{ output.name }} mode {{ output.resolution }}@{{ output.rate }}Hz
{%- endfor %}

# Wallpaper
output * bg {{ "~/%s"|format(wallpaper) }} fill

## Input configuration
# Keyboard
input type:keyboard {
    xkb_layout us,ru
    xkb_model "thinkpad"
    xkb_options "grp:alt_shift_toggle"
    xkb_variant "qwerty"
}

# Mouse
input type:pointer {
    accel_profile "flat"
    pointer_accel -0.6
}

## Key bindings
# [Container Navigation]
    # Launch terminal
    bindsym $mod+Return exec $term -e $shell $shell_cmds

    # Kill focused window
    bindsym $mod+w kill

    # Start app launcher
    bindsym $mod+d exec $launcher

    # Take a screenshot
    bindsym $mod+Shift+s exec slurp | GRIM_DEFAULT_DIR=~/Pictures/ grim -g -

    # Drag windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+r reload

    # Exit Sway
    # bindsym $mod+Shift+q exec swaynag -t warning -m 'What to do?' -B 'Logout' 'swaymsg exit' -B 'Suspend' 'systemctl suspend'
    bindsym $mod+Shift+q exec rofi -show shutdown -modes "shutdown:$HOME/.config/rofi/scripts/shutdown.sh" # NOTE: Requires `rofi`

    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or with arrow keys
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Or with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

    # Toggle split
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    # bindsym $mod+Shift+s layout stacking
    # bindsym $mod+Shift+w layout tabbed
    # bindsym $mod+Shift+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+f floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Cycle through scratchpad windows
    bindsym $mod+minus scratchpad show

# [Other]
{#- If there is a laptop screen #}
{#- TODO: Only show the comment if there's such screens #}
    # Turn laptop screen off when the lid is closed
{%- for monitor in monitors if monitor.isLaptop %}
    bindswitch --reload --locked lid:on  output {{ monitor.name }} disable
    bindswitch --reload --locked lid:off output {{ monitor.name }} enable
{%- endfor %}

# Resize mode
# Swtich to resize mode
bindsym $mod+r mode "resize"

mode "resize" {
    # With bound movement keys
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Or with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to normal/default mode
    bindsym $mod+r mode "default"
}

## Criteria
# NOTE: $terminal value can be different from the app_id
assign [app_id=$terminal] 1
assign [app_id="kitty"] 1
assign [app_id="Alacritty"] 1
# assign [class="Emacs"] 2
assign [class="LibreWolf"] 3
assign [title="qBittorrent*"] 5
assign [app_id="ario"] 6
assign [app_id="org.telegram.desktop"] 7
assign [app_id="pavucontrol"] 9

## Bar
bar {
    swaybar_command waybar
}

## Load other configs
include /etc/sway/config.d/*

## Execs
# Gtk
exec_always {
    gsettings set $gtk-schema gtk-theme $gtk-theme
    gsettings set $gtk-schema icon-theme $icon-theme
    gsettings set $gtk-schema cursor-theme $cursor-theme
    gsettings set $gtk-schema font-name "{{ font.name }} {{ font.size }}"
}

